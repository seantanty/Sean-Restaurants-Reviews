<% include ../partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to Sean's Restaurants Reviews</h1>
			<p>
				View our hand picked restaurants in the bay area
			</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/restaurants/new">Add a new Restaurant</a>
			</p>
		</div>
</header>

	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		<div class="col-md-12">
			<% if(noMatch !== null) { %>
			<h3><%= noMatch %></h3>
			<p>
				<form action="/restaurants" method="GET" class="form-inline">
					<div class="form-group">
						<input type="text" name="search" placeholder="Restaurant search..." class="form-control">
						<input type="submit" value="Search" class="btn btn-default">
					</div>
				</form>
			</p>
			<% } %>
		</div>
		<% restaurants.forEach(function(restaurant) { %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= restaurant.image%>">
				<div class="caption">	
					<h4><%= restaurant.name %></h4>
					<% if (restaurant.rating === 0) { %>
					<em>No comments yet.</em>
					<% } else { %>
					<span class="fa fa-star checked"></span>
					<span class="fa fa-star <% if (restaurant.rating > 1.5) { %> checked <% } %>"></span>
					<span class="fa fa-star <% if (restaurant.rating > 2.5) { %> checked <% } %>"></span>
					<span class="fa fa-star <% if (restaurant.rating > 3.5) { %> checked <% } %>"></span>
					<span class="fa fa-star <% if (restaurant.rating > 4.5) { %> checked <% } %>"></span>
					<% } %>
				</div>
				<p>
					<a href="/restaurants/<%= restaurant._id%>" class="btn btn-primary">More info</a>
				</p>
			</div>
		</div>
		<% }) %>
	</div>
</div>

<% include ../partials/footer %>