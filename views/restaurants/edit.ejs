<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">Edit <%= restaurant.name %></h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/restaurants/<%= restaurant._id %>?_method=PUT" method = "POST">
				<div class="form-group">
					<input class="form-control" type="text" name = "restaurant[name]" value = "<%= restaurant.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name = "restaurant[price]" value = "<%= restaurant.price %>" min="1.00" step="1.00">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name = "restaurant[address]" value = "<%= restaurant.address %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name = "restaurant[image]" value = "<%= restaurant.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name = "restaurant[description]" value = "<%= restaurant.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>
			<a href="/restaurants">Go back</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>