<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">Add New Comment to <%= restaurant.name %></h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/restaurants/<%= restaurant._id%>/comments" method = "POST">
				<div class="form-group">
					<label for="rating">Leave a rating:</label>
					<fieldset class="starability-basic form-group" id="rating">
						<div>
							<input type="radio" id="first-rate5" name="comment[rating]" value="5" checked />
							<label for="first-rate5" title="5 stars - Amazing">
								<%- '<span class="fa fa-star checked"></span>'.repeat(5) %>
							</label>
						</div>
						<div>
							<input type="radio" id="first-rate4" name="comment[rating]" value="4" />
							<label for="first-rate4" title="4 stars - Very good">
								<%- '<span class="fa fa-star checked"></span>'.repeat(4) %>
							</label>
						</div>
						<div>
							<input type="radio" id="first-rate3" name="comment[rating]" value="3" />
							<label for="first-rate3" title="3 stars - Average">
								<%- '<span class="fa fa-star checked"></span>'.repeat(3) %>
							</label>
						</div>
						<div>
							<input type="radio" id="first-rate2" name="comment[rating]" value="2" />
							<label for="first-rate2" title="2 stars - Not good">
								<%- '<span class="fa fa-star checked"></span>'.repeat(2) %>
							</label>
						</div>
						<div>
							<input type="radio" id="first-rate1" name="comment[rating]" value="1" />
							<label for="first-rate1" title="1 star - Terrible">
								<%- '<span class="fa fa-star checked"></span>'.repeat(1) %>
							</label>
						</div>
					</fieldset>
				</div>
				<div class="form-group">
					<textarea class="form-control" type="text" name="comment[text]" placeholder="Write something for this comment..." rows="5"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>
			<a href="/restaurants/<%= restaurant._id%>">Go back</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>